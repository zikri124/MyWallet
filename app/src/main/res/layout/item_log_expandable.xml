<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

 <androidx.constraintlayout.widget.ConstraintLayout
   android:id="@+id/logItemLayout"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_marginBottom="12dp"
   android:background="@drawable/squere_frame_with_outline_backgroundfill"
   android:padding="10dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/itemIcon"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@drawable/squere_frame_with_outline"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginStart="16dp"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    app:layout_constraintBottom_toBottomOf="@+id/itemIcon"
    app:layout_constraintStart_toEndOf="@+id/itemIcon"
    app:layout_constraintTop_toTopOf="@+id/itemIcon"
    app:layout_constraintVertical_bias="0.476">

   <TextView
     android:id="@+id/tittle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:fontFamily="@font/ubuntu_medium"
     android:gravity="top"
     android:text="Lanjo"
     android:textColor="@color/black"
     android:textSize="16sp" />

   <TextView
     android:id="@+id/tittle4"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:fontFamily="@font/rubik_medium"
     android:gravity="bottom"
     android:text="TextView"
     android:textSize="12sp" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/linearLayout4"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    app:layout_constraintBottom_toBottomOf="@+id/itemIcon"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/itemIcon">

   <TextView
     android:id="@+id/tittle3"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:fontFamily="@font/ubuntu_medium"
     android:gravity="top|center_vertical|end"
     android:text="+Rp18.000"
     android:textColor="@color/text_primary"
     android:textSize="14sp" />

   <TextView
     android:id="@+id/tittle2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:fontFamily="@font/ubuntu"
     android:gravity="center|end"
     android:text="1 Jan 2000, 18.34"
     android:textColor="@color/black"
     android:textSize="12sp" />
  </LinearLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/sub_item"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
    app:layout_constraintStart_toStartOf="@+id/itemIcon"
    app:layout_constraintTop_toBottomOf="@+id/itemIcon">

   <TextView
     android:id="@+id/tittle6"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_weight="1"
     android:fontFamily="@font/rubik_medium"
     android:gravity="bottom"
     android:text="Note"
     android:textSize="12sp"
     app:layout_constraintTop_toTopOf="parent"
     tools:layout_editor_absoluteX="69dp" />

   <TextView
     android:id="@+id/tittle7"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="4dp"
     android:layout_weight="1"
     android:fontFamily="@font/rubik"
     android:gravity="bottom"
     android:text="TextView"
     android:textSize="11sp"
     app:layout_constraintTop_toBottomOf="@+id/tittle6"
     tools:layout_editor_absoluteX="69dp" />

   <LinearLayout
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="16dp"
     android:orientation="horizontal"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tittle7">

    <Button
      android:id="@+id/button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="4dp"
      android:layout_weight="1"
      android:backgroundTint="@color/background"
      android:fontFamily="@font/rubik_medium"
      android:text="Edit"
      android:textColor="@color/text_primary"
      app:icon="@drawable/ic_baseline_edit_24"
      app:iconTint="@color/primary"
      app:strokeColor="@color/primary"
      app:strokeWidth="1dp" />

    <Button
      android:id="@+id/button2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_weight="1"
      android:backgroundTint="@color/background"
      android:fontFamily="@font/rubik_medium"
      android:text="Delete"
      android:textColor="@color/text_primary"
      app:icon="@drawable/baseline_delete_24"
      app:iconTint="@color/secondary"
      app:strokeColor="@color/secondary"
      app:strokeWidth="1dp" />
   </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>

 </androidx.constraintlayout.widget.ConstraintLayout>
</layout>